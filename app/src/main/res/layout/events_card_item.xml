<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                tools:context="com.tubbs.citychurchob.fragments.MessagesFragment">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="320dp"
        android:layout_height="255dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/event_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/citychurch"
                />

            <TextView
                android:id="@+id/event_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_image"
                android:singleLine="true"
                android:textSize="18sp"
                android:layout_alignLeft="@id/event_image"
                android:text="MissionOB"
                />

            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_title_text"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:text="September 20th"/>

            <TextView
                android:id="@+id/event_desc_text"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/event_image"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="50dp"
                android:layout_toRightOf="@id/event_title_text"
                android:ellipsize="end"
                android:maxLines="5"
                android:scrollHorizontally="true"
                android:text="This is a event event event event event event description. This will fill up with event info. Info info info info info info info info info info info info info info info."
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
